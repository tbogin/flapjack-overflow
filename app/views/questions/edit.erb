<% if @errors %>
  <h3><span>Something went wrong:</span></h3>
  <ul>
    <% @errors.each do |error| %>
      <li><p><%= error %></p></li>
    <% end %>
  </ul>
<% end %>
<div id="question_edit_container">
<h1>Revise your thoughts on your flapjack post ...</h1>

<form id="edit-question-form" method="post" action="/questions/<%= @question.id %>">
  <input type="hidden" name="_method" value="put">
  <div>
    <input name="title" type="text" value="<%= @question.title %>">
  </div>
  <div>
    <textarea name="body"><%= @question.body %></textarea>
  </div>
  <input class="button" type="submit" value="Edit">
</form>

<form method="post" action="/questions/<%= @question.id %>">
  <input type="hidden" name="_method" value="delete">
  <input class="button" type="submit" value="Delete">
</form>
</div>
